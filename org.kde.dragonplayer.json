{
    "id": "org.kde.dragonplayer",
    "runtime": "org.kde.Platform",
    "runtime-version": "6.9",
    "sdk": "org.kde.Sdk",
    "command": "dragon",
    "rename-icon": "dragonplayer",
    "finish-args": [
        "--device=dri",
        "--share=ipc",
        "--socket=pulseaudio",
        "--socket=wayland",
        "--socket=fallback-x11"
    ],
    "modules": [
        {
            "name": "org.kde.dragonplayer",
            "buildsystem": "cmake-ninja",
            "config-opts": [
                "-DCMAKE_BUILD_TYPE=RelWithDebInfo"
            ],
            "sources": [
                {
                    "type": "archive",
                    "url": "https://download.kde.org/stable/release-service/25.12.0/src/dragon-25.12.0.tar.xz",
                    "sha256": "cef32684cc197f0c561b2b18ddf53bb3a9acf0a8c9ce2298dc884931ef46ee99",
                    "x-checker-data": {
                        "type": "anitya",
                        "project-id": 236351,
                        "stable-only": true,
                        "url-template": "https://download.kde.org/stable/release-service/$version/src/dragon-$version.tar.xz"
                    }
                },
                {
                    "type": "patch",
                    "path": "0001-main-don-t-keep-the-engine-as-child-of-the-app.patch"
                }
            ]
        }
    ],
    "add-extensions": {
        "org.freedesktop.Platform.ffmpeg-full": {
            "version": "24.08",
            "directory": "lib/ffmpeg",
            "add-ld-path": "."
        }
    },
    "cleanup-commands": [
        "mkdir -p ${FLATPAK_DEST}/lib/ffmpeg"
    ]
}
